FROM ubuntu:22.04

ENV DEBIAN_FRONTEND=noninteractive

RUN apt-get update && apt-get install -y \
    software-properties-common \
    ca-certificates \
    wget \
    git \
    vim \
    curl \
    build-essential \
    python3.10 \
    python3.10-dev \
    python3.10-distutils \
    python3-pip \
    freecad \
    freecad-python3 \
    libfreecad-python3-0.19 \
    calculix-ccx \
    calculix-cgx \
    gmsh \
    python3-numpy \
    python3-scipy \
    python3-matplotlib \
    python3-pyqt5 \
    xvfb \
    libgl1-mesa-glx \
    libglu1-mesa \
    libxrender1 \
    libfontconfig1 \
    libxext6 \
    && rm -rf /var/lib/apt/lists/*

RUN update-alternatives --install /usr/bin/python3 python3 /usr/bin/python3.10 1 || true \
    && update-alternatives --set python3 /usr/bin/python3.10 || true \
    && python3 --version

RUN python3 -m pip install --upgrade pip setuptools wheel

ENV PYTHONPATH="/usr/lib/freecad-python3/lib:${PYTHONPATH:-}"

RUN python3 -m pip install --no-cache-dir \
    "cadquery>=2.4.0" \
    "langgraph>=0.2.0" \
    "langchain-core>=0.3.0" \
    "langchain-openai>=0.2.0" \
    "pydantic>=2.0" \
    "pydantic-settings>=2.0" \
    "sqlalchemy>=2.0" \
    "sqlite-utils>=3.35" \
    "pyyaml>=6.0" \
    "jinja2>=3.1" \
    "orjson>=3.9" \
    "numpy>=1.24" \
    "pillow>=10.0" \
    "rich>=13.0" \
    "pyvista>=0.43.0" \
    "cairosvg>=2.7.0" \
    "ipython" \
    "jupyter" \
    "meshio" \
    "numpy-stl" \
    "wandb" \
    "pandas" \
    || true

CMD ["/bin/bash"]
